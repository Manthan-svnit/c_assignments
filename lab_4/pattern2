#include <stdio.h>

int main() {
    int rows;
    printf("Enter rows you want to print:\n");
    scanf("%d", &rows);

    for (int i = 0; i < rows; i++) {
        // Print spaces
        for (int j = 0; j < (rows - i - 1); j++) {
            printf(" ");
        }

        // Print asterisks
        for (int k = 0; k <= i; k++) {
            printf("* ");
        }

        printf("\n");
    }

    return 0;
}
